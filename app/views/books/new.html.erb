<%= render 'partials/navbar' %>

<h1>Add a Book to Have It Summarized</h1>

<%= form_for @book do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :publish_date %>
    <%= f.number_field :publish_date %>

    <%= f.select(:author_id, @authors.collect {|author| [ author.full_name, author.id ] } + [ [ 'Or create a new one', 'new' ] ], {:include_blank => 'Please select an author'}) %>

    <%= f.submit %>
<% end %>