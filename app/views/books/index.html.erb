<div class="mx-auto" style="width: max-content">
    <h1 style="display: inline">Book List</h1>
    <%= image_tag("book_pile.jpg", size: "50x50", style: "display: inline") %>
</div>
<ul class="book_summaries">
<% @books.each do |book| %>
    <li><%= link_to "#{book.title}", book_path(book) %> by <%= " by #{book.author_full_name}" %></li>
<% end %>
</ul>

<%= button_to "Authors", authors_path, method: :get %>
<br>
<% if logged_in? %>
    <%= button_to "Your Profile", user_path(current_user), method: :get %>
<% else %>
    <%= button_to "Login", login_path, method: :get %><br>
    <p>Or</p>
    <%= button_to "Signup", signup_path, method: :get %>
<% end %>
