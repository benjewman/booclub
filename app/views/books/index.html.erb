<h1>Book List</h1>
<ul>
<% @books.each do |book| %>
    <li><%= link_to "#{book.title}", book_path(book) %> by <%= " by #{book.author.full_name}" %></li>
<% end %>
</ul>

<% if session[:user_id] %>
    <%= button_to "Your Profile", user_path(User.find(session[:user_id])), method: :get %>
<% else %>
    <%= button_to "Login", login_path, method: :get %><br>
    <p>Or</p>
    <%= button_to "Signup", signup_path, method: :get %>
<% end %>
