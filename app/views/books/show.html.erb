<h1><%= @book.title %></h1>
<h1>by <%= link_to @author.full_name, author_path(@author) %></h2>
<h3>Publish Year: <%= @book.publish_date %></h3>

<h2>Summaries</h2>
<% @summaries.each do |summary| %>
    <p><b><%= summary.title %></b>: a summary by <i><%= summary.username %></i></p>
    <p><%= summary.content %></p>
    <p><%= summary.title %> <b>Comments</b></p>
    <% summary.comments.each do |comment| %>
        <p><i><%= comment.content %></i> (<%= comment.user.username %>)</p>
    <% end %>
    <%= form_for [@book, Comment.new] do |f| %>
        <%# <%= f.label :content %>
        <%= f.text_area :content %>

        <%= f.hidden_field :summary_id, :value => summary.id %>
        <!-- line below should change -->
        <%= f.hidden_field :user_id, :value => 1 %>

        <%= f.submit %>
    <% end %>

<% end %>
<h3>Add a Summary</h3>
<%= form_for [@book, Summary.new] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :content %>
    <%= f.text_area :content %><br>

    <!--following code should be changed -->
    <%= f.hidden_field :user_id, :value => 1 %>

    <%= f.submit %>
<% end %>

<% if flash[:notice] %>
    <div class="notice"><font color="red"><%= flash[:notice] %></font></div>
<% end %>








